{% extends 'base.html.twig' %}

{% block content %}
    <div class="column is-12">
        <div class="card">
            <header class="card-header">
                <p class="card-header-title">{% trans %}APIs{% endtrans %}</p>
            </header>
            <div class="card-content">
                <div class="content">
                    <h3>{% trans %}List{% endtrans %} - {% trans %}All{% endtrans %}</h3>
                    <p><strong>{% trans %}Format{% endtrans %}:</strong> https://{{ app.request.host }}/api/list/{option}</p>
                    <p><strong>{% trans %}Example URL{% endtrans %}:</strong> <a href="https://{{ app.request.host }}/api/list/all">https://{{ app.request.host }}/api/list/all</a></p>
                    <p><strong>{% trans %}Info{% endtrans %}:</strong> {% trans %}This URL is just for listing the current options.{% endtrans %}</p>
                    <pre>[
{% for application in allApplications %}
  "{{ application.name }}"{% if not loop.last %},{% endif %}

{% endfor %}
]</pre>
                    <h3>{% trans %}List{% endtrans %} - {% trans %}Example usage{% endtrans %}</h3>
                    <p><strong>{% trans %}Format{% endtrans %}:</strong> https://{{ app.request.host }}/api/list/{option}</p>
                    <p><strong>{% trans %}Example URL{% endtrans %}:</strong> <a href="https://{{ app.request.host }}/api/list/mcpc">https://{{ app.request.host }}/api/list/mcpc</a></p>
                    <p><strong>{% trans %}Info{% endtrans %}:</strong> {% trans with {'%applicationName%': 'MCPC+'} %}Real world usage for grabbing the list of files for %applicationName%.{% endtrans %}</p>
                    <pre>[
  "mcpc-plus-1.6.4-R2.1-forge965-B243.jar",
  "mcpc-plus-1.6.4-R2.1-forge965-B251.jar",
  "mcpc-plus-1.5.2-R1.1-forge738-B653.jar",
  "mcpc-plus-1.6.4-R2.1-forge965-B228.jar",
  "mcpc-plus-1.6.4-R0.1-forge933-B101.jar",
  "mcpc-plus-1.5.2-R1.1-forge738-B646.jar",
  "mcpc-plus-1.4.7-R1.1-SNAPSHOT-f534-authfix1.jar",
  "mcpc-plus-1.6.2-R0.1-forge804-B39.jar",
  "mcpc-plus-1.4.7-R1.1-SNAPSHOT-f534-247.jar",
  "craftbukkitplusplus-1.2.5-R4.1-MCPC-SNAPSHOT.jar"
]</pre>
                    <h3>{% trans %}File{% endtrans %} - {% trans %}Example usage{% endtrans %}</h3>
                    <p><strong>{% trans %}Format{% endtrans %}:</strong> https://{{ app.request.host }}/api/file/{option}/{filename}
                    <p><strong>{% trans %}Example URL{% endtrans %}:</strong> <a href="https://{{ app.request.host }}/api/file/spigot/spigot-1.13-R0.1-SNAPSHOT-b1795.jar">https://{{ app.request.host }}/api/file/spigot/spigot-1.13-R0.1-SNAPSHOT-b1795.jar</a></p>
                    <p><strong>{% trans %}Info{% endtrans %}:</strong> {% trans with {'%buildName%': 'spigot-1.13-R0.1-SNAPSHOT-b1795.jar'} %}Real world usage for requesting information about %buildName%.{% endtrans %}</p>
                    <pre>{
  "size_human": "43 MB",
  "size_bytes": 45864727,
  "file_name": "spigot-1.13-R0.1-SNAPSHOT-b1795.jar",
  "date_human": "August 3, 2018",
  "date_epoch": 1533340692,
  "mc_version": "1.13",
  "direct_link": "https://{{ app.request.host }}/files/spigot/spigot-1.13-R0.1-SNAPSHOT-b1795.jar",
  "grab_link": "https://{{ app.request.host }}/grab/spigot/spigot-1.13-R0.1-SNAPSHOT-b1795.jar"
}</pre>
                </div>
            </div>
        </div>
    </div>
{% endblock %}